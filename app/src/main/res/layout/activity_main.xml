<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_app_week"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:text="Week of Day"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"/>

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/duvidas"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/text_day"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="59dp" />
    
    <LinearLayout
        android:id="@+id/container_week"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingHorizontal="15dp"
        android:paddingTop="15dp"
        android:background="@drawable/shape_container_week"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_segunda"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:cardBackgroundColor="@color/cor_segunda"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingHorizontal="20dp"
                        android:text="Monday"
                        android:textColor="@color/white"
                        android:textSize="22dp"
                        android:textStyle="bold"/>

                    <ImageView
                        android:layout_width="133dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/seg" />
                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_terca"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:cardBackgroundColor="@color/cor_terca"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingHorizontal="20dp"
                        android:text="Tuesday"
                        android:textColor="@color/white"
                        android:textSize="22dp"
                        android:textStyle="bold"/>

                    <ImageView
                        android:layout_width="88dp"
                        android:layout_height="117dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/terc" />
                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_quarta"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:cardBackgroundColor="@color/cor_quarta"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingHorizontal="20dp"
                        android:text="Wednesday"
                        android:textColor="@color/white"
                        android:textSize="22dp"
                        android:textStyle="bold"/>

                    <ImageView
                        android:layout_width="78dp"
                        android:layout_height="117dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/quart" />
                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_quinta"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:cardBackgroundColor="@color/cor_quinta"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingHorizontal="20dp"
                        android:text="Thursday"
                        android:textColor="@color/white"
                        android:textSize="22dp"
                        android:textStyle="bold"/>

                    <ImageView
                        android:layout_width="78dp"
                        android:layout_height="117dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/quint" />
                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_sexta"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:cardBackgroundColor="@color/cor_sexta"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingHorizontal="20dp"
                        android:text="Friday"
                        android:textColor="@color/white"
                        android:textSize="22dp"
                        android:textStyle="bold"/>

                    <ImageView
                        android:layout_width="78dp"
                        android:layout_height="117dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/sext" />
                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_sabado"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:cardBackgroundColor="@color/cor_sabado"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingHorizontal="20dp"
                        android:text="Saturday"
                        android:textColor="@color/white"
                        android:textSize="22dp"
                        android:textStyle="bold"/>

                    <ImageView
                        android:layout_width="78dp"
                        android:layout_height="117dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/sabad" />
                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_domingo"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:cardBackgroundColor="@color/cor_domingo"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingHorizontal="20dp"
                        android:text="Sunday"
                        android:textColor="@color/white"
                        android:textSize="22dp"
                        android:textStyle="bold"/>

                    <ImageView
                        android:layout_width="78dp"
                        android:layout_height="117dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/doming" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>